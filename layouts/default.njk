<!DOCTYPE html>
<html>
    <head>
        {% block header %}
            <title>{{title}} | {{ site.title }}</title>
        {% endblock %}

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="{{ root }}/css/main.css">

    </head>
    <body>
      <div class="wrapper">
  {% set id = 1 %}
    {% for item in sections %}
        <div id="p{{ id }}" class="anchor"></div>
        {% set id = id + 1 %}
    {% endfor %}
        <div class="grid">
    {% block content %}
      {% set idItem = 1 %}
      {% for item in sections %}
          <div class="item" id="item1">
    				<a href="#p{{idItem}}" class="focus-page">focus</a>
            {{ item.contents | safe }}
            {% set idItem = idItem + 1 %}
            <a href="#p{{idItem}}">Next</a>
          </div>
      {% endfor %}
    {% endblock %}
        </div>
      </div>
    </body>
</html>
